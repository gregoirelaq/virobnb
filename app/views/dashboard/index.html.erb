<div class="container" style="max-width: 1200px; margin: 0 auto; padding: 20px;">

  <h1>Dashboard</h1>

  <div class="tabs">
  <button class="tab-btn active" data-tab="overview" data-color="#007bff" data-bgcolor="#e0f0ff" onclick="showTab(event, 'overview')">Overview</button>
  <button class="tab-btn" data-tab="profile" data-color="#007bff" data-bgcolor="#e0f0ff" onclick="showTab(event, 'profile')">Profile</button>

  <button class="tab-btn" data-tab="bookings" data-color="#28a745" data-bgcolor="#e0ffe0" onclick="window.location.href='<%= dashboard_bookings_path %>'">Bookings</button>
  <%# <button class="tab-btn" data-tab="bookings" data-color="#28a745" data-bgcolor="#e0ffe0" onclick="showTab(event, 'bookings')">Bookings</button> %>
  </div>


  <div id="overview">
    <h2>Recent Bookings</h2>

    <div class="col-10 row table-container">
      <table>
        <tr class="table-header mb-3">
          <th>ID</th>
          <th>Virus</th>
          <th>Booking Date</th>
          <th>Total Price</th>
        </tr>
        <% @recent_bookings.each do |booking| %>
          <tr class="mb-3">
            <td><%= booking.id %></td>
            <td><%= booking.virus.name %></td>
            <td>from <%= booking.start_date %> to <%= booking.end_date %></td>
            <td> â‚¬ <%= booking.total_price %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
