<!-- Bannière pleine largeur -->
<%# <div class="banner" style="background-image: url('https://images.unsplash.com/flagged/photo-1584036561584-b03c19da874c'); background-size: cover; background-position: center; height: 600px;"></div> %>

<!-- Conteneur principal centré -->
<div class="container" style="max-width: 1200px; margin: 0 auto; padding: 20px;">

  <!-- Flex-container principal -->
  <div class="flex-container" style="display: flex; gap: 20px; margin-top: 30px;">

    <!-- Colonne principale (3/4 de la largeur) -->
    <div style="flex: 3; background-color: #ffffff; padding: 20px; border-radius: 8px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);">
      <h2 style="margin-bottom: 15px; color: #333;"><%= @virus.name %></h2>
      <p style="margin-bottom: 15px; line-height: 1.6; color: #555;">Description :</p>
      <p style="margin-bottom: 15px; line-height: 1.6; color: #555;"><%= @virus.description %></p>
      <p style="font-weight: bold; color: #333;" id="price-value">Prix par jour : <%= number_to_currency(@virus.price, unit: "€") %></p>
    </div>

    <!-- Colonne formulaire (1/4 de la largeur) -->
    <div class="card shadow-sm border-0 rounded-3 p-4" data-controller="price" data-price-price-per-night-value="<%= @virus.price %>">
      <div class="card-body">
        <h2 class="h4 fw-bold mb-3">Book this virus</h2>
        <%= simple_form_for [@virus, @virus.bookings.new], html: { class: "needs-validation" } do |f| %>

          <!-- Start Date -->
          <div class="mb-3">
            <label class="form-label">Start Date</label>
            <%= f.input :start_date,
                as: :string,
                input_html: {
                  class: "form-control",
                  data: { controller: "datepicker", price_target: "startDate" }
                },
                label: false %>
          </div>

          <!-- End Date -->
          <div class="mb-3">
            <label class="form-label">End Date</label>
            <%= f.input :end_date,
                as: :string,
                input_html: {
                  class: "form-control",
                  data: { controller: "datepicker", price_target: "endDate" }
                },
                label: false %>
          </div>

          <!-- Total Price Display -->
          <div class="d-flex justify-content-between align-items-center fs-5 fw-semibold">
            <span>Total Price:</span>
            <span data-price-target="totalPrice">$0.00</span>
          </div>

          <!-- Book Now Button -->
          <div class="mt-3">
            <%= f.button :submit, "Book Now", class: "btn btn-danger w-100 fw-semibold py-2" %>
          </div>

        <% end %>
      </div>
    </div>
    </div>

    <h2>Reviews</h2>

    <% if user_signed_in? %>
      <% if current_user.bookings.where(virus: @virus).exists? %>
        <%= link_to "Leave a Review", new_virus_review_path(@virus), class: "btn btn-primary" %>
      <% else %>
        <p class="text-muted">You must book this virus before leaving a review.</p>
      <% end %>
    <% else %>
      <p class="text-muted">Please <%= link_to "log in", new_user_session_path %> to leave a review.</p>
    <% end %>

    <% @virus.reviews.order(created_at: :desc).each do |review| %>
      <div class="review">
        <div class="d-flex align-items-center mb-2">
          <strong><%= review.user.first_name %></strong>
          <span class="ms-2">Rated: <%= review.rating %> / 5</span>
        </div>
        <p><%= review.comment %></p>
        <small class="text-muted">Posted on <%= review.created_at.strftime("%B %d, %Y") %></small>
        <hr>
      </div>
    <% end %>

  </div>

</div>
</div>
