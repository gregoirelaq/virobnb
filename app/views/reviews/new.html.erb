<h2>Leave a Review</h2>

<%= form_with(model: [@virus, @review], local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :rating %>
    <%= form.number_field :rating, min: 1, max: 5, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :comment %>
    <%= form.text_area :comment, rows: 5, class: "form-control" %>
  </div>

  <%= form.submit "Submit Review", class: "btn btn-primary" %>
<% end %>
